modules = ["nodejs-20", "python-3.11"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ToneBridge Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ToneBridge Client"

[[workflows.workflow]]
name = "ToneBridge Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && poetry run uvicorn backend_server:app --host 0.0.0.0 --port 8000 --reload"
waitForPort = 8000

[[workflows.workflow]]
name = "ToneBridge Client"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd temp-frontend && npm start"
waitForPort = 5000

[[ports]]
localPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[nix]
channel = "stable-25_05"
packages = ["blas", "ffmpeg", "ffmpeg-full", "gcc", "glibc", "lapack", "libcxx", "libsndfile", "libxcrypt", "openjdk17", "openssl", "pkg-config", "portaudio", "postgresql", "rapidfuzz-cpp", "sapling", "taskflow", "tree", "vim-full", "xsimd", "zlib"]
